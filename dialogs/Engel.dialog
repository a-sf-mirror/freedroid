Nr=17 Text="BUG, REPORT ME! engel node17 -- checks" Topic="Extract bot parts"
NO_TEXT
<LuaCode>
	rev = get_program_revision("Extract bot parts")

	if (can_tux_train(50, 1)) then
		if (rev == 0) then next(18) end -- Learn rev1
		if (rev == 1) then next(20) end -- Learn rev2
		if (rev == 2) then next(30) end -- Learn rev3
		if (rev == 3) then next(40) end -- Learn rev4
		if (rev == 4) then next(50) end -- Learn rev5
	else -- Can't train
		next(99) -- This stops a crash
		if (get_gold() >= 50) then -- Training points were the problem
			npc_says(_"Hmmm...")
			npc_says(_"You look green. Toughen up. Get some experience, kill some bots.")
			npc_says(_"Then we can talk.")
		else -- No $$$
			npc_says(_"Hmmm...")
			npc_says(_"Kein geld, keine hilfe.") -- No money, no help.
			npc_says(_"Come back with some money.")
		end
	end

	if (rev == 5) then -- Max level
		next(70)
	elseif (can_tux_train(50, 1)) then
		del_gold(50)
		del_points(1)
	end

</LuaCode>
